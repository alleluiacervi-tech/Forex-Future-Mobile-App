# Backend API Configuration
NODE_ENV=development
PORT=4000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/forex_trading_app"

# CORS
CORS_ORIGIN=http://localhost:19006,http://localhost:8081,http://localhost:3000

# Optional: API keys for third-party services
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Market data (Finnhub)
FINNHUB_API_KEY=your_finnhub_api_key_here
# Optional: override full WS URL (otherwise built from FINNHUB_API_KEY)
# FINNHUB_WS_URL=wss://ws.finnhub.io?token=...
# Optional (dev): start backend without upstream WS
# ALLOW_NO_FINNHUB_WS=true

# Optional debug logging
# MARKET_WS_DEBUG=true
# MARKET_CACHE_DEBUG=true

# Email (SMTP)
# Use an app password (recommended) instead of your normal mailbox password.
EMAIL_USER=your_email@example.com
EMAIL_APP_PASSWORD=your_app_password_here
# Optional overrides
# EMAIL_FROM="Forex Trading App <your_email@example.com>"
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=465
# EMAIL_SMTP_SECURE=true
#
# Protected validation endpoints (disabled unless set)
# EMAIL_VALIDATION_TOKEN=change-me-to-a-long-random-string
# EMAIL_TEST_RECIPIENT=your_email@example.com
# EMAIL_ALLOW_TEST_TO_ANY=false

# Password reset (Forgot password)
# Expires time for reset tokens (JWT duration format)
# PASSWORD_RESET_EXPIRES_IN=15m
#
# Optional: deep link / URL used in reset emails. Supports {token} placeholder.
# Examples:
# PASSWORD_RESET_URL=forexapp://reset-password?token={token}
# PASSWORD_RESET_URL=https://your-domain.com/reset-password?token={token}
#
# Optional (recommended in production): fail the endpoint if SMTP isn't configured
# PASSWORD_RESET_REQUIRE_EMAIL=true
#
# Optional: throttle window per IP+email (ms)
# PASSWORD_RESET_THROTTLE_MS=60000
#
# Optional (dev only): return token/link in API response if email send fails or SMTP is not configured
# PASSWORD_RESET_DEBUG_RETURN_TOKEN=false
